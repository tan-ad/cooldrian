---
export interface Props {
  date: Date;
  category: "Tech" | "Life";
  showCategory?: boolean;
}

const { date, category, showCategory = true } = Astro.props;

const formatDate = (date: Date) => {
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "short",
    day: "numeric",
  });
};

const categoryColors = {
  Tech: "bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300",
  Life: "bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300",
};
---

<div class="flex items-center gap-3 text-sm text-muted">
  <time datetime={date.toISOString()}>
    {formatDate(date)}
  </time>

  {
    showCategory && (
      <>
        <span class="text-muted/50">â€¢</span>
        <span
          class={`px-2 py-1 rounded-md text-xs font-medium ${categoryColors[category]}`}
        >
          {category}
        </span>
      </>
    )
  }
</div>


---
import PostMeta from "./PostMeta.astro";

export interface Props {
  title: string;
  href: string;
  date: Date;
  category: "Tech" | "Life";
  summary?: string;
}

const { title, href, date, category, summary } = Astro.props;
---

<article class="py-4 border-b border-muted/20 last:border-b-0">
  <div
    class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2 mb-2"
  >
    <h3 class="text-lg font-medium">
      <a href={href} class="text-heading hover:text-accent transition-colors">
        {title}
      </a>
    </h3>
    <PostMeta date={date} category={category} />
  </div>

  {summary && <p class="text-text text-sm leading-relaxed">{summary}</p>}
</article>


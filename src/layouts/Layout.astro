---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	pageTitle: string;
}

const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Adrian's personal website" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body class="bg-white dark:bg-gray-900 text-black dark:text-white min-h-screen flex flex-col">
		<Header />
		
		<main class="flex-grow container mx-auto px-4 py-8">
			<!-- The <slot /> is the magic Astro tag. -->
			<!-- It's where the content from your other pages will be injected. -->
			<slot />
		</main>

		<Footer />
	</body>
</html>
<style is:global>
	/* global styles */
</style>
